<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(order) -%>">
  <span class='title'>
    <i><%= l order.created_at, format: :long %></i>  User <strong><%= order.user.username %></strong>(<%= order.user_id %>) ordered tier <strong><%= order.tier.title %></strong> 

  </span>
  <span class='actions'>
    
    <%= link_to refinery_icon_tag("application_go.png"), refinery.orders_admin_order_path(order),
        :title => t('.view_live_html') %>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_orders_admin_order_path(order),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.orders_admin_order_path(order),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => order.pay_type),
        :method => :delete %>
  </span>
</li>
