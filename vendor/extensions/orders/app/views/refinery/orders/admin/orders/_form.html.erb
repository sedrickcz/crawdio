<%= form_for [refinery, :orders_admin, @order] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @order,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :user_id -%>
    <%= f.number_field :user_id -%>
  </div>

  <div class='field'>
    <%= f.label :tier_id -%>
    <%= f.number_field :tier_id -%>
  </div>

  <div class='field'>
    <%= f.label :price -%>
    <%= f.text_field :price -%>
  </div>

  <div class='field'>
    <%= f.label :paid -%>
    <%= f.check_box :paid, :checked => @order[:paid] -%>
  </div>

  <div class='field'>
    <%= f.label :paid_at -%>
    <%= f.datetime_select :paid_at -%>
  </div>

  <div class='field'>
    <%= f.label :pay_type -%>
    <%= f.text_field :pay_type -%>
  </div>

  <div class='field'>
    <%= f.label :payment_id -%>
    <%= f.number_field :payment_id -%>
  </div>

  <div class='field'>
    <%= f.label :email -%>
    <%= f.text_field :email -%>
  </div>

  <div class='field'>
    <%= f.label :tier_name -%>
    <%= f.text_field :tier_name -%>
  </div>

  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name -%>
  </div>

  <div class='field'>
    <%= f.label :street -%>
    <%= f.text_field :street -%>
  </div>

  <div class='field'>
    <%= f.label :city -%>
    <%= f.text_field :city -%>
  </div>

  <div class='field'>
    <%= f.label :country -%>
    <%= f.text_field :country -%>
  </div>

  <div class='field'>
    <%= f.label :payment_status -%>
    <%= f.text_field :payment_status -%>
  </div>

  <div class='field'>
    <%= f.label :transaction_id -%>
    <%= f.text_field :transaction_id -%>
  </div>

  <div class='field'>
    <%= f.label :platform_1 -%>
    <%= f.select :platform_1, options_for_select(['PC','XBOX','PS4'], @order.platform_1)-%>
  </div>

  <div class='field'>
    <%= f.label :platform_2 -%>
    <%= f.select :platform_2, options_for_select(['PC','XBOX','PS4'], @order.platform_2)-%>
  </div>

  <div class='field'>
    <%= f.label :tshirt -%>
    <%= f.select :tshirt, options_for_select(['S (woman)','M (woman)','L (woman)','M (man)','L (man)','XL (man)'], @order.tshirt)-%>
  </div>

  <div class='field'>
    <%= f.label :ingame_name -%>
    <%= f.text_field :ingame_name -%>
  </div>

  <div class='field'>
    <%= f.label :sword_legal -%>
    <%= f.check_box :sword_legal -%>
  </div>

  <div class='field'>
    <%= f.label :agree -%>
    <%= f.check_box :agree -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.orders.admin.orders.order'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @order.pay_type) -%>
<% end -%>
