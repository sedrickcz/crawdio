<% content_for :body_content_title do %>
  <%= @order.pay_type %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>User</h1>
    <p>
      <%=raw @order.user_id %>
    </p>
  </section>
  <section>
    <h1>Tier</h1>
    <p>
      <%=raw @order.tier_id %>
    </p>
  </section>
  <section>
    <h1>Price</h1>
    <p>
      <%=raw @order.price %>
    </p>
  </section>
  <section>
    <h1>Paid</h1>
    <p>
      <%=raw @order.paid %>
    </p>
  </section>
  <section>
    <h1>Paid At</h1>
    <p>
      <%=raw @order.paid_at %>
    </p>
  </section>
  <section>
    <h1>Pay Type</h1>
    <p>
      <%=raw @order.pay_type %>
    </p>
  </section>
  <section>
    <h1>Payment</h1>
    <p>
      <%=raw @order.payment_id %>
    </p>
  </section>
  <section>
    <h1>Email</h1>
    <p>
      <%=raw @order.email %>
    </p>
  </section>
  <section>
    <h1>Tier Name</h1>
    <p>
      <%=raw @order.tier_name %>
    </p>
  </section>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @order.name %>
    </p>
  </section>
  <section>
    <h1>Street</h1>
    <p>
      <%=raw @order.street %>
    </p>
  </section>
  <section>
    <h1>City</h1>
    <p>
      <%=raw @order.city %>
    </p>
  </section>
  <section>
    <h1>Country</h1>
    <p>
      <%=raw @order.country %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="orders">
      <% @orders.each do |order| %>
        <li>
          <%= link_to order.pay_type, refinery.orders_order_path(order) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
