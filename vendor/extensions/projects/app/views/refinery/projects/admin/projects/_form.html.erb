<%= form_for [refinery, :projects_admin, @project] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @project,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= render '/refinery/admin/wysiwyg',
                :f => f,
                :fields => [:short_description, :long_description, :faq, :terms, :updates],
                :object => "projects/project" -%>
  </div>

  <div class='field'>
    <%= f.label :goal -%>
    <%= f.text_field :goal -%>
  </div>

  <div class='field'>
    <%= f.label :main_image -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :main_image_id,
               :image => @project.main_image,
               :toggle_image_display => false -%>
  </div>

  <div class='field'>
    <%= f.label :image_1 -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :image_1_id,
               :image => @project.image_1,
               :toggle_image_display => false -%>
  </div>

  <div class='field'>
    <%= f.label :image_2 -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :image_2_id,
               :image => @project.image_2,
               :toggle_image_display => false -%>
  </div>

  <div class='field'>
    <%= f.label :image_3 -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :image_3_id,
               :image => @project.image_3,
               :toggle_image_display => false -%>
  </div>

  <div class='field'>
    <%= f.label :image_4 -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :image_4_id,
               :image => @project.image_4,
               :toggle_image_display => false -%>
  </div>

  <div class='field'>
    <%= f.label :image_5 -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :image_5_id,
               :image => @project.image_5,
               :toggle_image_display => false -%>
  </div>

  <div class='field'>
    <%= f.label :active -%>
    <%= f.check_box :active, :checked => @project[:active] -%>
  </div>

  <div class='field'>
    <%= f.label :video -%>
    <%= f.text_field :video -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.projects.admin.projects.project'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @project.title) -%>
<% end -%>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end -%>
