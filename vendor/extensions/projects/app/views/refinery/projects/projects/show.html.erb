<% content_for :body_content_title do %>
  <%= @project.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @project.title %>
    </p>
  </section>
  <section>
    <h1>Short Description</h1>
    <p>
      <%=raw @project.short_description %>
    </p>
  </section>
  <section>
    <h1>Long Description</h1>
    <p>
      <%=raw @project.long_description %>
    </p>
  </section>
  <section>
    <h1>Goal</h1>
    <p>
      <%=raw @project.goal %>
    </p>
  </section>
  <section>
    <h1>Main Image</h1>
    <p>
      <%= image_fu @project.main_image, nil %>
    </p>
  </section>
  <section>
    <h1>Image 1</h1>
    <p>
      <%= image_fu @project.image_1, nil %>
    </p>
  </section>
  <section>
    <h1>Image 2</h1>
    <p>
      <%= image_fu @project.image_2, nil %>
    </p>
  </section>
  <section>
    <h1>Image 3</h1>
    <p>
      <%= image_fu @project.image_3, nil %>
    </p>
  </section>
  <section>
    <h1>Image 4</h1>
    <p>
      <%= image_fu @project.image_4, nil %>
    </p>
  </section>
  <section>
    <h1>Image 5</h1>
    <p>
      <%= image_fu @project.image_5, nil %>
    </p>
  </section>
  <section>
    <h1>Active</h1>
    <p>
      <%=raw @project.active %>
    </p>
  </section>
  <section>
    <h1>Video</h1>
    <p>
      <%=raw @project.video %>
    </p>
  </section>
  <section>
    <h1>Faq</h1>
    <p>
      <%=raw @project.faq %>
    </p>
  </section>
  <section>
    <h1>Terms</h1>
    <p>
      <%=raw @project.terms %>
    </p>
  </section>
  <section>
    <h1>Updates</h1>
    <p>
      <%=raw @project.updates %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="projects">
      <% @projects.each do |project| %>
        <li>
          <%= link_to project.title, refinery.projects_project_path(project) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
