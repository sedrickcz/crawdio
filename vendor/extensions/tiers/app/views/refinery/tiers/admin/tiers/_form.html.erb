<%= form_for [refinery, :tiers_admin, @tier] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @tier,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :price -%>
    <%= f.text_field :price -%>
  </div>

  <div class='field'>
    <%= f.label :limit -%>
    <%= f.number_field :limit -%>
  </div>

  <div class='field'>
    <%= f.label :physical -%>
    <%= f.check_box :physical, :checked => @tier[:physical] -%>
  </div>

  <div class='field'>
    <%= render '/refinery/admin/wysiwyg',
                :f => f,
                :fields => [:short_description, :long_description, :side_text],
                :object => "tiers/tier" -%>
  </div>

  
  <div class='field'>
    <%= f.label :project_id -%>
    <%= f.select :project_id, options_for_select(::Refinery::Projects::Project.order(:title).collect{|p| [p.title, p.id]}, @tier.project_id) -%>
  </div>



  <div class='field'>
    <%= f.label :active -%>
    <%= f.check_box :active, :checked => @tier[:active] -%>
  </div>

<h3>Bonuses</h3>
    <div class='field'>
      <%= f.label :platform_1 -%>
      <%= f.check_box :platform_1 -%>
    </div>

    <div class='field'>
      <%= f.label :platform_2 -%>
      <%= f.check_box :platform_2-%>
    </div>

    <div class='field'>
      <%= f.label :tshirt -%>
      <%= f.check_box :tshirt-%>
    </div>

    <div class='field'>
      <%= f.label :ingame_name -%>
      <%= f.check_box :ingame_name -%>
    </div>

    <div class='field'>
      <%= f.label :sword_legal -%>
      <%= f.check_box :sword_legal -%>
    </div>


  <div class='field'>
    <%= f.label :image_1 -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :image_1_id,
               :image => @tier.image_1,
               :toggle_image_display => false -%>
  </div>

  <div class='field'>
    <%= f.label :image_2 -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :image_2_id,
               :image => @tier.image_2,
               :toggle_image_display => false -%>
  </div>

  <div class='field'>
    <%= f.label :image_3 -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :image_3_id,
               :image => @tier.image_3,
               :toggle_image_display => false -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.tiers.admin.tiers.tier'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @tier.title) -%>
<% end -%>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end -%>
