<ul>
  <% if ::Refinery::Tiers::Admin::TiersController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.tiers_admin_tiers_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_tiers_admin_tier_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Tiers::Admin::TiersController.sortable? && ::Refinery::Tiers::Tier.many? %>
  <li>
    <%= link_to t('.reorder', :what => "Tiers"),
                 refinery.tiers_admin_tiers_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Tiers"),
                 refinery.tiers_admin_tiers_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
